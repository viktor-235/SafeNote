<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="pane" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
    <right>
        <HBox maxHeight="-Infinity" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="copyButton" mnemonicParsing="false" onAction="#handleCopy">
                    <graphic>
                        <MaterialIconView glyphName="CONTENT_COPY" size="18" strokeType="OUTSIDE" strokeWidth="0.0"/>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </right>
    <left>
        <HBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="5.0" BorderPane.alignment="CENTER_LEFT">
            <children>
                <MaterialIconView fx:id="icon" glyphName="FOLDER_OPEN" size="18" strokeType="OUTSIDE"
                                  strokeWidth="0.0"/>
                <Label fx:id="nameLabel" textOverrun="LEADING_ELLIPSIS"/>
                <Label fx:id="textLabel" textFill="#aeaeae" textOverrun="LEADING_ELLIPSIS">
                    <HBox.margin>
                        <Insets left="5.0"/>
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
    </left>
</BorderPane>
